<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="SplashTheme" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
    </style>


    <!--No action bar theme-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--Transparent theme-->

    <!--THIS FOR BACK BUTTON-->
    <style name="ActionBarBackButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <!-- THIS FOR BUTTON FOR LOGIN,SIGN UP,FORGOT PASSWORD AND CHANGE PASSWORD -->
    <style name="OrangeButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:foreground">@drawable/ripple_round_white</item>
        <item name="android:background">@drawable/shape_button_primary_fill</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- THIS FOR BUTTON FOR LOGIN,SIGN UP,FORGOT PASSWORD AND CHANGE PASSWORD -->
    <style name="OrangeButtonStrokeStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:foreground">@drawable/ripple_round_white</item>
        <item name="android:background">@drawable/shape_button_primary_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- THIS FOR BUTTON FOR REORDER -->
    <style name="GrayButtonStrokeStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:foreground">@drawable/ripple_round_white</item>
        <item name="android:background">@drawable/shape_button_gray_border</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- THIS FOR COMMON ACTION BAR TITLES -->
    <style name="ActionBarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- THIS FOR COMMON TITLE DESCRIPTION -->
    <style name="DescriptionTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ActionBarTextStyleXLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- THIS FOR COMMON EDIT TEXT FIELD  -->
    <style name="CommonInputFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_text_input</item>
        <item name="android:textSize">17sp</item>
        <!--        <item name="android:drawablePadding">16sp</item>-->
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/textInputTextColor</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!-- THIS FOR COMMON EDIT TEXT FIELD  -->
    <style name="ProfileFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_text_profile</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/cat_txt_color</item>
        <item name="android:textColorHint">@color/time_txt_color</item>
    </style>
    <!-- THIS FOR TEXT VIEW FIELD IN LOGIN PAGE -->
    <style name="LoginTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>
